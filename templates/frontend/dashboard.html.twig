{%- extends 'frontend/base.html.twig' -%}

{%- set current_page = 'dashboard' -%}

{%- block content -%}
    {% from "@GhostGovUkFrontend/components/macros.html.twig" import taskListStart, taskListEnd, taskListItem %}

    {# TODO: Intention here is that this page will list the local authorities and their "status", as in...
             whether there are any outstanding returns for this authority.
    #}

    {{ taskListStart() }}
    {% for recipient in app.user.recipientsForWhichUserHasRoles %}
        {{ taskListItem({
            title: {text: recipient.name},
            href: path('app_recipient', {id: recipient.id}),
            status: {tag: {text: 'Unknown'}},
        }, loop.index) }}
    {% endfor %}
    {{ taskListEnd() }}
{%- endblock -%}
