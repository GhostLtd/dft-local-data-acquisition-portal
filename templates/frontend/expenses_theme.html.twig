{%- extends '@GhostGovUkFrontend/theme.html.twig' %}

{%- block form_errors -%}
    {#- We put the errors inside the visually hidden block to avoid the text
        spam of (e.g.) 30 error messages at once, which would be common with
        the forecase_required error message
    -#}
    {%- if errors|length > 0 -%}
        {%- set id = form.vars.id ~ '-error' -%}
        <div class="govuk-visually-hidden">
            <p id="{{ id }}" class="govuk-error-message">
                {{- 'Error: ' -}}
                {%- for error in errors -%}
                    {{ error.message }}
                    {%- if not loop.last %}<br>{% endif -%}
                {%- endfor -%}
            </p>
        </div>
    {%- endif -%}
{%- endblock -%}
