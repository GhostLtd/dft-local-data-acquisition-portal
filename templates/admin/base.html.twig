{% extends 'base.html.twig' %}

{% block pageTitle %}{{ "admin.pages.#{current_page}.title" | trans }} | {{ "admin.site-title-prefix" | trans }}{{ parent() }}{% endblock %}

{% set current_page_title = current_page_title ?? "admin.pages.#{current_page}.title" %}

{% block navigation %}
    {%- from "@GhostGovUkFrontend/components/macros.html.twig" import serviceNavigation -%}

    {%- set current_menu = current_menu ?? current_page -%}

    {{- serviceNavigation({
        classes: 'govuk-service-navigation__wrapper-full-width',
        serviceName: 'site.title' | trans,
        navigation: [
            {
                href: path('admin_dashboard'),
                text: "admin.pages.dashboard.title" | trans,
                active: current_menu == 'dashboard'
            },
            {
                href: path('admin_maintenance'),
                text: "admin.pages.maintenance.title" | trans,
                active: current_menu == 'maintenance'
            }
        ]
    }) -}}
{% endblock %}
