{% extends 'admin/base.html.twig' %}

{% trans_default_domain 'admin' %}
{%- set page_title_key = "pages.maintenance_delete.title" -%}
{%- set current_menu = 'maintenance' -%}

{%- block content -%}
    {%- from '@GhostGovUkFrontend/components/macros.html.twig' import summaryList, warningText -%}

    {%- with {warning: subject} -%}

        {{- summaryList({classes: 'govuk-!-margin-bottom-5', rows: {
            Start: warning.startDatetime | format_datetime,
            End: warning.endTime | format_time
        }}) -}}
        {{- warningText({text: "#{translation_prefix}.warning" | trans }) -}}

        {{- form(form) -}}
    {%- endwith -%}
{%- endblock -%}