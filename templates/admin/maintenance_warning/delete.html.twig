{% extends 'admin/base.html.twig' %}

{% trans_default_domain 'admin' %}
{%- set page_title_key = "pages.maintenance_delete.title" -%}
{%- set current_menu = 'maintenance' -%}

{%- block content -%}
    {%- from '@GhostGovUkFrontend/components/macros.html.twig' import summaryListStart, summaryListEnd, summaryListRow, warningText -%}

    {%- with {warning: subject} -%}

        {{- summaryListStart({classes: 'govuk-!-margin-bottom-5'}) -}}
            {{- summaryListRow({
                key: 'Start',
                value: warning.startDatetime | format_datetime
            }) -}}
            {{- summaryListRow({
                key: 'End',
                value: warning.endTime | format_time
            }) -}}
        {{- summaryListEnd() -}}
        {{- warningText({text: "#{translation_prefix}.warning" | trans }) -}}

        {{- form(form) -}}
    {%- endwith -%}
{%- endblock -%}